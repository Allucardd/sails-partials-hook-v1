	<article class="section-foro" ng-repeat="post in posts" ng-model="show_answer" ng-init="show_answer = 0">
		<div class="wrap-post" >
			<div class="section-photo post-owner no-margin-left">
				<div class="profile-image"></div>
	      <span class="titulo">
	      	<small>{[{ post.owner_username }]}</small>
	      	<label>{[{ post.category }]}</label>
	      </span>
			</div> <!-- end section-photo -->

			<div class="wrap-answers">
				<span class="titulo"> {[{ post.title }]}</span>

				<div class="wrap-description min-height">
					<p>{[{post.description}]}</p>
				</div>
				<div class="wrap-options">
					<span class="titulo line-right">
						<small>Borrar</small>
					</span>
					<span class="titulo">
						<small>Editar</small>
					</span>
				</div>
			</div> <!-- end wrap-answers -->
		</div>


			<div class="container-other-anwers" >
				<div class="respuesta" ng-repeat="answer in post.answers.slice(0,show_answer)">

					<div class="section-photo">
						<div class="profile-image"></div>
			      <span class="titulo">
			      	<small>{[{answer.username}]}</small>

			      </span>
					</div> <!-- end section photo1 -->

					<div class="wrap-description push-answer"><p>{[{answer.body}]}</p></div>
				</div> <!-- end respuesta -->

				<div class="respuesta">

					<div class="section-photo">
						<div class="profile-image"></div>
			      <span class="titulo">
			      	<small>NOMBRE</small>
			      </span>
					</div> <!-- end section photo1 -->

					<div class="wrap-description push-answer"><p>Respuesta</p></div>
				</div> <!-- end respuesta -->

				<div>
					<button ng-click="view_answers(this)">Ver mas respuestas</button>
				</div>

			</div> <!-- end container-other-anwers -->
	</article>




